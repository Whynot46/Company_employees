<Main_screen>:
    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_y': 1}
        adaptive_height: True
        MDTopAppBar:
            title: 'Ваше предприятие'
            size_hint_y: .6
            anchor_title: "left"
            elevation: 4
            right_action_items: [["weather-night", lambda x: app.set_dark_theme()], ["white-balance-sunny", lambda x: app.set_light_theme()]]
            font_size: sp(40)
    MDBottomAppBar:
        MDTopAppBar:
            title: 'https://github.com/Whynot46/Company_employees'
            icon: "github"
            type: "bottom"
            left_action_items: [["home-circle", lambda x: app.go_to_main()]]
            mode: "end"

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': 0.5}
        #size_hint_y:0.35
        adaptive_height: True
        MDGridLayout:
            cols:1
            rows: 3
            spacing: sp(15)
            MDFillRoundFlatIconButton:
                icon:'database-search'
                text: 'Сотрудники'
                on_release:
                    root.manager.current = 'Staff_data_base'
                size_hint_x:0.5
            MDFillRoundFlatIconButton:
                icon:'information'
                text: 'Поиск сотрудника'
                on_release:
                    root.manager.current = 'Staff_info'
                size_hint_x:0.5

            MDGridLayout:
                cols: 2
                rows: 1
                MDFillRoundFlatIconButton:
                    icon:'desktop-classic'
                    text: 'Компьютеры'
                    on_release: root.manager.current = 'Comp_data_base'
                    size_hint_x:0.5
                MDFillRoundFlatIconButton:
                    icon:'printer'
                    text: 'Принтеры / МФУ'
                    on_release: root.manager.current = 'Printer_data_base'
                    size_hint_x:0.5

<Staff_info>:
    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_y': 1}
        adaptive_height: True
        MDTopAppBar:
            title: 'Ваше предприятие'
            size_hint_y: .6
            anchor_title: "left"
            elevation: 4
            right_action_items: [["weather-night", lambda x: app.set_dark_theme()], ["white-balance-sunny", lambda x: app.set_light_theme()]]
            font_size: sp(40)
    MDBottomAppBar:
        MDTopAppBar:
            title: 'https://github.com/Whynot46/Company_employees'
            icon: "github"
            type: "bottom"
            left_action_items: [["home-circle", lambda x: app.go_to_main()]]
            mode: "end"

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {'center_y': 0.8}
        spacing: 10
        MDTextField:
            id: people_name_entry
            font_size: sp(20)
            hint_text: 'ФИО сотрудника'
            helper_text: 'Для получения подробной информации о сотруднике введите его ФИО'
            helper_text_mode: 'on_focus'
        MDFillRoundFlatIconButton:
            spacing: sp(50)
            icon:'tab-search'
            text: 'Найти'
            on_release:
                root.show_info()
            size_hint_x:0.25

