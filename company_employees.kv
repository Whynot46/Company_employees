<Main_screen>:
    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_y': 1}
        adaptive_height: True
        MDTopAppBar:
            title: 'Сотрудники вашего предприятия'
            size_hint_y: .6
            anchor_title: "left"
            elevation: 4
            right_action_items: [["weather-night", lambda x: app.set_dark_theme()], ["white-balance-sunny", lambda x: app.set_light_theme()]]
            font_size: sp(40)
    MDBottomAppBar:
        MDTopAppBar:
            title: "developed by Whynot46"
            icon: "github"
            type: "bottom"
            left_action_items: [["home-circle", lambda x: app.go_to_main()]]
            mode: "end"
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': 0.5}
        #size_hint_y:0.35
        adaptive_height: True
        MDGridLayout:
            cols:1
            rows: 3
            spacing: sp(15)
            MDFillRoundFlatIconButton:
                icon:'database-search'
                text: 'База данных'
                on_release:
                    root.manager.current = 'Data_base'
                size_hint_x:0.5
            MDFillRoundFlatIconButton:
                icon:'information'
                text: 'Информация о сотруднике'
                on_release:
                    root.manager.current = 'Staff_info'
                size_hint_x:0.5
            MDGridLayout:
                cols:2
                rows: 1
                spacing: sp(10)
                MDFillRoundFlatIconButton:
                    icon:'plus-circle'
                    text: 'Добавить сотрудника'
                    on_release:
                        root.add_people()
                    size_hint_x:0.35
                MDFillRoundFlatIconButton:
                    icon:'delete-circle'
                    text: 'Удалить сотрудника'
                    on_release:
                        root.delete_people()
                    size_hint_x:0.35

<Staff_info>:
