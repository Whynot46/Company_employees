    MDGridLayout:
        adaptive_height: True
        pos_hint: {'center_y': 0.5}
        cols: 1
        rows: 2
        padding: [50, 50, 50, 50]
        MDTextField:
            id: people_name_entry
            hint_text: 'ФИО сотрудника'
            helper_text: 'Для получения подробной информации о сотруднике введите его ФИО'
            helper_text_mode: 'on_focus'
        MDFillRoundFlatIconButton:
            spacing: sp(50)
            icon:'tab-search'
            text: 'Найти'
            on_release:
                root.show_info()
            size_hint_x:0.35

